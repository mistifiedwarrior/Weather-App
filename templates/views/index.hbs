<!DOCTYPE html>

<head>
  <link rel="stylesheet" href="./css/style.css">
  <link rel="icon" href="./img/cloud.png">
  <title>weather</title>
</head>

<body>
  <div class="main-content">
    {{>header}}
    <p>Weather Forecasts</p>
    <form action="">
      <input type="text" placeholder="location">
      <button>Search</button>
    </form>
    <div id="error"></div>
    <div id="loader">Loading...</div>
    <div class="details">
      <div id="location"> </div>
      <div>
        <div id="description"></div>
        <img id="img" src="" alt="">
      </div>
      <div>
        <div id="temp"></div>
        <div id="is_day"></div>
      </div>
      <div>
        <div id="pressure"></div>
        <div id="humidity"></div>
      </div>
      <div>
        <div id="wind_dir"></div>
        <div id="visibility"></div>
      </div>
      <div>
        <div id="lat"></div>
        <div id="lon"> </div>
      </div>
    </div>
  </div>
  {{>footer}}
  <script src="/js/app.js"></script>
</body>

</html>